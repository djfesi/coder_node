<div class="container mt-5">
  <h1 class="display-4 text-center mb-4">Cart Details
    <small>(ID: {{cartId}})</small></h1>
  {{#if isEmpty}}
    <div class="alert alert-warning text-center">The cart is empty.</div>
  {{else}}
    <div class="row">
      {{#each products}}
        <div
          class="list-group-item list-group-item-action flex-column align-items-start"
        >
          <div class="d-flex w-100 justify-content-between">
            <img
              src="{{product.thumbnail}}"
              alt="Imagen del Producto"
              style="width:100px; height:100px; margin-right: 20px;"
            />
            <div class="info">
              <h5 class="mb-1">{{product.title}}</h5>
              <small>Amount: {{quantity}}</small> -
              <small>Unit price: ${{product.price}}</small>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
  <div class="text-center mt-4">
    <a href="/products" class="btn btn-primary">Return to product list</a>
  </div>
</div>
